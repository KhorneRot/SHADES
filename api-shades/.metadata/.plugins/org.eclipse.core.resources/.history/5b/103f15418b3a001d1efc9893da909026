package com.shades.controllers;

import java.util.ArrayList;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.shades.models.CarritoModelo;
import com.shades.services.CarritoService;

@RestController
@RequestMapping("/api/carrito")
public class CarritoController {

	@Autowired
	CarritoService carritoService;
	
	@GetMapping()
	public ArrayList<CarritoModelo> obtenerCarrito(){
		return carritoService.obtenerCarrito();
	}
	
	@PostMapping()
	public CarritoModelo guardarCarrito(@RequestBody CarritoModelo carrito) {
		return this.carritoService.guardarCarrito(carrito);
	}
	
	@PutMapping("/actualizar")
	public CarritoModelo actualizar(@RequestBody CarritoModelo carritoModelo) {
        return carritoService.modificarCarrito(carritoModelo);
	    }



	@DeleteMapping("/borrar/{CarritoId}")
	public String eliminarporId(@PathVariable("metodopagoId") Long CarritoId) {
        boolean ok = this.carritoService.borrarCarrito(CarritoId);
	        if (ok) {
	            return "Se elimino el carrito con id " + CarritoId;
	        }else{
	            return "No pudo eliminar el carrito con id " + CarritoId;
	        }
	    }


	
}
